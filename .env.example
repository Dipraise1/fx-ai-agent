# Trading Agent Environment Variables

# API Keys
FINNHUB_API_KEY=your_finnhub_api_key_here
FINNHUB_SECRET=your_finnhub_secret_here

# Alternative API Keys (optional)
ALPHAVANTAGE_API_KEY=your_alphavantage_key_here
COINAPI_KEY=your_coinapi_key_here

# Logging Level (INFO, DEBUG, WARNING, ERROR)
LOG_LEVEL=INFO

# Continuous Mode Settings
# Set to true to enable continuous analysis
CONTINUOUS_MODE=false
# Interval between analyses in minutes
POLLING_INTERVAL_MINUTES=15

# Trading Settings
# Maximum account size for position sizing
ACCOUNT_SIZE=10000
# Maximum risk percentage per trade (1.0 = 1%)
MAX_RISK_PERCENT=1.0
# Maximum daily loss percentage (3.0 = 3%)
MAX_DAILY_LOSS=3.0
# Maximum number of concurrent positions
MAX_POSITIONS=3

# Data Settings
# Enable/disable data caching
CACHE_ENABLED=true
# Data cache expiry in seconds
CACHE_EXPIRY_SECONDS=3600 